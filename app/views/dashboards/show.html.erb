<div class="row">
  <div class="col-xs-12">
    <h2>Dashboard</h2>
  </div>
</div>

<hr/>

<div class="row">
  <div class="col-xs-4">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Billable Hours</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-xs-6">
            <p class="text-muted">Today</p>
            <h4><%= number_with_precision(Entry.billable.today.sum(:minutes) / 60.0, precision: 2) %></h4>
          </div>
          <div class="col-xs-6">
            <p class="text-muted">Yesterday</p>
            <h4><%= number_with_precision(Entry.billable.yesterday.sum(:minutes) / 60.0, precision: 2) %></h4>
          </div>
        </div>
        <hr/>
        <div class="row">
          <div class="col-xs-6">
            <p class="text-muted">This Week</p>
            <h4><%= number_with_precision(Entry.billable.this_week.sum(:minutes) / 60.0, precision: 2) %></h4>
          </div>
          <div class="col-xs-6">
            <p class="text-muted">Last Week</p>
            <h4><%= number_with_precision(Entry.billable.last_week.sum(:minutes) / 60.0, precision: 2) %></h4>
          </div>
        </div>
        <hr/>
        <div class="row">
          <div class="col-xs-6">
            <p class="text-muted">This Month</p>
            <h4><%= number_with_precision(Entry.billable.this_month.sum(:minutes) / 60.0, precision: 2) %></h4>
          </div>
          <div class="col-xs-6">
            <p class="text-muted">Last Month</p>
            <h4><%= number_with_precision(Entry.billable.last_month.sum(:minutes) / 60.0, precision: 2) %></h4>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xs-4">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Bootstrapping Hours</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-xs-6">
            <p class="text-muted">Today</p>
            <h4><%= number_with_precision(Entry.bootstrapping.today.sum(:minutes) / 60.0, precision: 2) %></h4>
          </div>
          <div class="col-xs-6">
            <p class="text-muted">Yesterday</p>
            <h4><%= number_with_precision(Entry.bootstrapping.yesterday.sum(:minutes) / 60.0, precision: 2) %></h4>
          </div>
        </div>
        <hr/>
        <div class="row">
          <div class="col-xs-6">
            <p class="text-muted">This Week</p>
            <h4><%= number_with_precision(Entry.bootstrapping.this_week.sum(:minutes) / 60.0, precision: 2) %></h4>
          </div>
          <div class="col-xs-6">
            <p class="text-muted">Last Week</p>
            <h4><%= number_with_precision(Entry.bootstrapping.last_week.sum(:minutes) / 60.0, precision: 2) %></h4>
          </div>
        </div>
        <hr/>
        <div class="row">
          <div class="col-xs-6">
            <p class="text-muted">This Month</p>
            <h4><%= number_with_precision(Entry.bootstrapping.this_month.sum(:minutes) / 60.0, precision: 2) %></h4>
          </div>
          <div class="col-xs-6">
            <p class="text-muted">Last Month</p>
            <h4><%= number_with_precision(Entry.bootstrapping.last_month.sum(:minutes) / 60.0, precision: 2) %></h4>
          </div>
        </div>
      </div>
    </div>    
  </div>

  <div class="col-xs-4">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Goals</h3>
      </div>
      <div class="panel-body">
        <p class="text-muted">
          Track progress toward goals.<br/>(coming soon)
        </p>
        <div class="progress">
          <div class="progress-bar progress-bar-success" style="width: 35%">
            <span class="sr-only">35% Complete (success)</span>
          </div>
          <div class="progress-bar progress-bar-warning" style="width: 20%">
            <span class="sr-only">20% Complete (warning)</span>
          </div>
          <div class="progress-bar progress-bar-danger" style="width: 10%">
            <span class="sr-only">10% Complete (danger)</span>
          </div>
        </div>
      </div>
    </div>    
  </div>
</div>

