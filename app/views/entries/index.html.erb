<div class="container">

<div class="row container dashboard thumbnail">
  <div class="row">
    <div class="col-sm-1" style="color: #9DA0A4; margin-left: 8px;">
    today
    </div>
    <div class="col-sm-10">
    </div>
  </div>
  <%= render 'daily_dashboard' %>
</div>

<div class="container" id="form-container">
  <%= render :partial => 'inline_form' %>
</div>

<div class="container row">

  <h5>Today</h5>

  <div class="table-responsive">
    <table class="table table-hover entries-table">
      <tbody id="entries-rows">
        <% @entries_today.each do |entry| %>
          <%= render entry %>
        <% end %>
      </tbody>
    </table>
  </div>

  <h5>
    Yesterday
    <%= number_with_precision(Entry.billable.yesterday.sum(:minutes)/60.0, precision: 0) %> /
    <%= number_with_precision(Entry.bootstrapping.yesterday.sum(:minutes)/60.0, precision: 0) %> /
    <%= number_with_precision(Entry.other.yesterday.sum(:minutes)/60.0, precision: 0) %>
  </h5>

  <div class="table-responsive">
    <table class="table table-hover entries-table">
      <tbody id="entries-rows">
        <% @entries_yesterday.each do |entry| %>
          <%= render entry %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="container">
    <div class="page-header">
        <h1 id="timeline">Timeline</h1>
    </div>
    <ul class="timeline" id="ul-timeline">
      <%= render :partial => 'timeline_entries' %>
    </ul>
</div>