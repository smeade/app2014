<%= form_for(@entry, remote: true, :html => { :class => "" }) do |f| %>
  <div class="row new-entry">
    <div class="form-group col-sm-2">
      <% if @entry.new_record? %>
        <%= f.text_field :minutes, :class => "form-control", :placeholder => "time" %>
      <% else %>
        <span id='clocking'>
          <%= image_tag "clock-spinner.gif", :id => 'clock-icon' %>
        </span>
      <% end %>
    </div>
    <div class="form-group col-sm-4">
      <%= f.select :project_id_or_name, options_from_collection_for_select(Project.all, :id, :name), {:tabindex => "-1", :prompt => "Select or create a project..."} %>
    </div>
    <div class="form-group col-sm-4">
      <%= f.text_field :description, :class => "form-control", :placeholder => "description / #tags" %>
    </div>
    <div class="form-group col-sm-2">
      <% if @entry.new_record? %>
        <%= f.submit :class => "btn btn-primary entry-save", :value => "Save" %>
      <% else %>
        <%= f.submit :class => "btn btn-primary entry-save", :value => "Stop" %>
      <% end %>
    </div>
  </div>
  <div class="row new-entry">
    <div class="form-group col-sm-12">
      <%= f.text_field :journal, :class => "form-control", :placeholder => "journal notes (optional)" %>
    </div>
  </div>
<% end %>
