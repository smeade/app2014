<%= form_for(@entry, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @entry.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h4>

      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :date, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.date_select :date, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :minutes, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.number_field :minutes, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :project, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :project, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :description, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :journal, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :journal, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :billable, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.check_box :billable, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
