<%= form_for(@project, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @project.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h4>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :client, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.select :client_id, options_from_collection_for_select(Client.all, :id, :name), {:prompt => "Select or create a client..."} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :code, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :code, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :billable, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.check_box :billable, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :budget, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :budget, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :notes, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :notes, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :active, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.check_box :active, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
